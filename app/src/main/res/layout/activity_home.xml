<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Custom bottom navigation bar -->
    <LinearLayout
        android:id="@+id/custom_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- HOME (far left) -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/home_icon_bg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/ellipse_679">

                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home"
                    app:tint="@color/primary"
                    android:contentDescription="@string/home_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- SEARCH (closer to center) -->
        <LinearLayout
            android:id="@+id/nav_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <FrameLayout
                android:id="@+id/search_icon_bg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search"
                    app:tint="@color/primary"
                    android:contentDescription="@string/search_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Spacer for diamond button -->
        <View
            android:layout_width="56dp"
            android:layout_height="match_parent" />

        <!-- MAP (closer to center) -->
        <LinearLayout
            android:id="@+id/nav_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp">

            <FrameLayout
                android:id="@+id/map_icon_bg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/group_4"
                    app:tint="@color/primary"
                    android:contentDescription="@string/map_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAP"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- PROFILE (far right) -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/profile_icon_bg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    app:tint="@color/primary"
                    android:contentDescription="@string/profile_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Center ADD button, floating above nav bar -->
    <ImageView
        android:id="@+id/nav_add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dimaondplus"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="36dp"
        android:elevation="8dp"
        android:contentDescription="@string/add_icon" />
</FrameLayout>
